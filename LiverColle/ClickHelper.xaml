<Window x:Class="LiverColle.ClickHelper"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LiverColle"
        mc:Ignorable="d"
        Title="ClickHelper" Topmost="True" AllowsTransparency="True" WindowStyle="None" WindowState="Maximized" Background="#7F9B9B9B" MouseLeftButtonDown="Window_MouseLeftButtonDown" KeyDown="Window_KeyDown">
    <Grid>
        <Canvas x:Name="Container">
        <Ellipse x:Name="Pointer" Width="5" Height="5" Fill="#7FDC3434"></Ellipse>
        </Canvas>
    </Grid>
</Window>
